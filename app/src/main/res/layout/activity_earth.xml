<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE8EB"
    tools:context=".Earth">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="59dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/global_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="90dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:orientation="vertical"
                android:elevation="15dp"
                android:paddingBottom="27dp"
                android:background="@drawable/white_background"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/order_animation"
                    android:layout_width="match_parent"
                    android:layout_height="129dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/totalcases" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL CASES"
                    android:layout_marginTop="25dp"
                    android:textSize="20sp"
                    android:textColor="#4378B1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/global_case_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="4500000"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL DEATH"
                    android:layout_marginTop="16dp"
                    android:textSize="20sp"
                    android:textColor="#4378B1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/global_death_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="45000"
                    android:textSize="25sp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/countries_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/global_layout"
                android:layout_marginTop="35dp"
                android:paddingBottom="15dp"
                android:background="@drawable/white_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/countries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:text="Country"/>
                <TextView
                    android:id="@+id/countries_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:text="@string/confirmed"/>
                <TextView
                    android:id="@+id/countries_death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="#000000"
                    android:layout_marginTop="22dp"
                    android:textSize="19sp"
                    android:text="@string/death"/>

                <LinearLayout
                    android:id="@+id/countries_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_below="@id/countries"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#4378B1"
                        android:textStyle="bold"
                        android:text="USA"/>
                    <TextView
                        android:id="@+id/cn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textStyle="bold"
                        android:textColor="#4378B1"
                        android:textSize="22sp"
                        android:text="Spain"
                        />
                    <TextView
                        android:id="@+id/cn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="#4378B1"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Italy"
                        />
                    <TextView
                        android:id="@+id/cn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="#4378B1"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="UK"
                        />
                    <TextView
                        android:id="@+id/cn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="#4378B1"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Germany"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/countries_total"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#C00F0F"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:textSize="18sp"
                        android:textColor="#C00F0F"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="#C00F0F"
                        android:textSize="18sp"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:textSize="18sp"
                        android:textColor="#C00F0F"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cc5"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#C00F0F"
                        android:text="100000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="22dp"
                    android:layout_below="@id/countries_total"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/cd1"
                        android:textColor="#033604"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:textColor="#033604"
                        android:textSize="18sp"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cd3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:textColor="#033604"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cd4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:textColor="#033604"
                        android:text="100000"/>
                    <TextView
                        android:id="@+id/cd5"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="13dp"
                        android:textColor="#033604"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="100000"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/countries_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#0C3057"
                android:text="Showing top 5 most affected countries"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>